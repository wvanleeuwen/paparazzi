<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="90" ground_alt="0" lat0="31.988423" lon0="-81.848358" max_dist_from_home="7000" name="Atmov fly offf" security_height="100">
  <header>
#include "autopilot.h"
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint name="HOME" lat="31.988423" lon="-81.848358"/>
    <waypoint name="CLIMB" lat="31.988423" lon="-81.848358"/>
    <waypoint alt="80.0" name="STDBY" lat="31.988485" lon="-81.848421"/>
    <waypoint alt="80.0" lat="32.007343" lon="-81.839498" name="NWP1"/>
    <waypoint alt="80.0" lat="32.009770" lon="-81.836419" name="NWP2"/>
    <waypoint alt="30.0" lat="32.010942" lon="-81.833544" name="NWPto45"/>
    <waypoint alt="10.0" lat="32.011419" lon="-81.832110" name="NWPto45bld"/>
    <waypoint alt="-2" lat="32.011772" lon="-81.831060" name="NWPto90"/>
    <waypoint lat="32.011841" lon="-81.830671" name="TD"/>
    <waypoint alt="-2" lat="32.011818" lon="-81.830815" name="target"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavResurrect()"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="ins_enu_pos.z > POS_BFP_OF_REAL(40.)" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="0.5" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="ThrottleTakeoff" strip_button="ThrottleTakeoff">
      <exception cond="ins_enu_pos.z > POS_BFP_OF_REAL(15.)" deroute="goN1"/>
      <attitude pitch="0" roll="0" throttle="0.8" until="ins_enu_pos.z > POS_BFP_OF_REAL(6.)" vmode="throttle"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="0.5" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <go wp="STDBY"/>
    </block>
    <block name="goN1">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavSetTransitionPercentage(0)"/>
      <go wp="NWP1"/>
    </block>
    <block name="goN2">
      <go wp="NWP2"/>
    </block>
    <block name="goT45">
      <go wp="NWPto45"/>
      <call fun="NavSetTransitionPercentage(50)"/>
    </block>
    <block name="goT45bld">
      <go wp="NWPto45bld"/>
    </block>
    <block name="goThover">
      <go wp="NWPto90"/>
      <call fun="NavSetTransitionPercentage(100)"/>
    </block>
    <block name="goNtarget">
      <stay wp="target"/>
      <deroute block="landhere"/>
    </block>
    <block name="landhere" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="ArmGroundDetectSwitch()"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.4" vmode="climb" wp="TD"/>
    </block>
  </blocks>
</flight_plan>
