<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan
        name="Flight Plan"
        lat0="51.990634" lon0="4.376789"
        ground_alt="0"
        security_height="0.4"
        max_dist_from_home="8"
        alt="2.0">

  <header>
    # define NOM_FLIGHT_ALT 1.0  // nominal flight altitude
  </header>

  <waypoints>
    <!-- Mission waypoints -->
    <waypoint name="HOME" x="0.0" y="0.0"/>
  </waypoints>

  <!--<exceptions>-->
    <!--<exception cond="datalink_time > 2 && nav_is_in_flight()" deroute="Hover"/>-->
  <!--</exceptions>-->

  <blocks>
    <!-- Kill the throttle and wait for GPS fix -->
    <block name="Wait GPS">
      <call fun="KillEngines()"/>
      <while cond="!GpsFixValid()"/>
    </block>

    <!-- Wait 5 seconds and then set altitude reference -->
    <block name="Geo init">
      <call_once fun="ResetAlt()"/>
      <while cond="1"/>
    </block>

    <block name="Take off">
      <call fun="StartEngines()"/>
      <call_once fun="ResetAlt()"/>
      <call fun="TakeOff(0.2)"/>
      <call fun="WaitUntilAltitude(NOM_FLIGHT_ALT - 0.2)"/>
    </block>

    <block name="Hover 2 sec">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <while cond="2 > block_time"/>
    </block>

    <block name="Find item">
      <call_once fun="detector_disable_all()"/>
      <call_once fun="detector.item_bottom->active = true"/>
      <call_once fun="detector.item_front->active = true"/>
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="bucket_heading_change(1)"/>
      <exception cond="marker1.found_time > 1" deroute="Center item"/>
    </block>

    <block name="Approach item">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="bucket_approach(1)"/>
      <exception cond="marker_lost == true" deroute="Find item"/>
      <exception cond="marker1.found_time > 1" deroute="Center item"/>
    </block>

    <block name="Center item">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="marker_center_land(0.05, 0, 0)"/>
      <exception cond="0.1 > marker1.found_time" deroute="Find item"/>
      <exception cond="marker1.found_time > 4" deroute="Land item"/>
    </block>

    <block name="Land item">
      <call fun="marker_center_land(0.05, 0.4, 0.5)"/>
      <!--<call_once fun="KillEngines()"/>-->
      <while cond="1"/> <!-- wait indefinitely -->
    </block>

    <block name="Go up">
      <call fun="TakeOff(0.2)"/>
      <call fun="WaitUntilAltitude(NOM_FLIGHT_ALT - 0.2)"/>
    </block>

    <block name="Hover before finding bucket">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <while cond="2 > block_time"/>
    </block>

    <block name="Find bucket">
      <call_once fun="detector_disable_all()"/>
      <call_once fun="detector.bucket_bottom->active = true"/>
      <call_once fun="detector.bucket_front->active = true"/>
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="bucket_heading_change(1)"/>
    </block>

    <block name="Approach bucket">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="bucket_approach(1)"/>
      <exception cond="marker_lost == true" deroute="Find bucket"/>
    </block>

    <block name="Center bucket">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="marker_center_land(0.05, 0, 0)"/>
      <exception cond="0.1 > marker1.found_time" deroute="Find bucket"/>
    </block>


    <!--<block name="Center big bucket">-->
      <!--<call fun="Hover(NOM_FLIGHT_ALT)"/>-->
      <!--<call fun="marker_center_land(-0.1, 0, 0)"/>-->
    <!--</block>-->

    <block name="Close Gripper">
      <call_once fun="close_gripper()"/>
      <while cond="1"/>
    </block>
    
    <block name="Open Gripper">
      <call_once fun="open_gripper()"/>
      <while cond="1"/>
    </block>

    <block name="Fly Through Window">
      <call_once fun="win_state = 0"/>
      <call fun="fly_through_window()"/>
    </block>

    <block name="Front cam down">
      <call_once fun="front_cam_set_x_offset(512)"/>
      <while cond="1"/>
    </block>

    <block name="Front cam forward">
      <call_once fun="front_cam_set_x_offset(896)"/>
      <while cond="1"/>
    </block>

    <block name="Hover">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <while cond="1"/>
    </block>

  </blocks>
</flight_plan>
