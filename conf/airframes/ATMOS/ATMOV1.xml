<airframe name="ATMOV1"> 
  <servos min="0" neutral="0" max="0xff">
    <!-- Plus configuration, similar to the convention shown in http://paparazzi.enac.fr/wiki/Rotorcraft_Configuration -->
    <!-- Direction of rotation is opposite to that of the convention for engines HB and WL -->
    <servo name="HB"            no="0" min="1050" neutral="1050" max="2300"/>	<!-- Hover prop bottom -->
    <servo name="HT"            no="1" min="1050" neutral="1050" max="2300"/>	<!-- Hover prop top -->
    <servo name="WL"            no="2" min="1050" neutral="1050" max="2300"/>	<!-- Wingtip prop left -->
    <servo name="WR"            no="3" min="1050" neutral="1050" max="2300"/>	<!-- Wingtip prop right --> 
    <servo name="AILEVON_LEFT"  no="4" min="1000" neutral="1500" max="2000"/>
    <servo name="AILEVON_RIGHT" no="6" min="1000" neutral="1500" max="2000"/>
    <servo name="RUDDER"  	no="7" min="2000" neutral="1500" max="1000"/>
<!--    <servo name="ALWAYSDOWN"  	no="7" min="1000" neutral="1500" max="2000"/>-->
  </servos>

  <commands>
    <axis name="ROLL"     failsafe_value="0"/>
    <axis name="PITCH"    failsafe_value="0"/>
    <axis name="YAW"      failsafe_value="0"/>
    <axis name="THRUST"   failsafe_value="0"/>
    <axis name="RC_MODE"  failsafe_value="0"/>
    <axis name="RC_ROLL"  failsafe_value="0"/>
    <axis name="RC_YAW"  failsafe_value="0"/>
    <axis name="RC_PITCH" failsafe_value="0"/>
    <axis name="RC_THRUST" failsafe_value="0"/>
  </commands>

  <section name="AUTOPILOT">
    <define name="MODE_MANUAL" value="AP_MODE_ATTITUDE_DIRECT"/>
    <define name="MODE_AUTO1"  value="AP_MODE_ATTITUDE_DIRECT"/>
    <define name="MODE_AUTO2"  value="AP_MODE_RC_DIRECT"/>
    
    <define name="AUTOPILOT_KILL_WITHOUT_AHRS"  value="TRUE"/>

    <!-- for kill switch: -->
    <define name="AUTOPILOT_ARMING_KILL_SWITCH"/>
    <!--<define name="AUTOPILOT_ARMING_THROTTLE"/>-->
  </section>

  <rc_commands>
    <set command="RC_MODE"  value="@MODE < -1500 ? MODE_MANUAL : (@MODE > 1500 ? MODE_AUTO2 : MODE_AUTO1) "/>
    <set command="RC_YAW"  value="@YAW"/>
    <set command="RC_ROLL"  value="@ROLL"/>
    <set command="RC_PITCH" value="@PITCH"/>
    <set command="RC_THRUST" value="@THROTTLE"/>
  </rc_commands>


  <command_laws>
    <set servo="AILEVON_LEFT"   value="@YAW+(atmos_pitch_factor*@PITCH)" />
    <set servo="AILEVON_RIGHT"  value="@YAW-(atmos_pitch_factor*@PITCH)" />
    <!--<set servo="ALWAYSDOWN"     value="ahrs.ltp_to_body_euler.theta/ANGLE_BFP_OF_REAL(M_PI)*9600" />-->
    <set servo="RUDDER"         value="@YAW"/>
  </command_laws>

  <section name="ROTORCRAFT" prefix="ROTORCRAFT_">
    <define name="COMMANDS_YAW_ALWAYS_ENABLED" value="TRUE"/>
 </section>

  <section name="SUPERVISION" prefix="SUPERVISION_">
    <define name="MIN_MOTOR" 		value="1050"/>
    <define name="MAX_MOTOR" 		value="2300"/>
    <define name="TRIM_A" 		value="0"/>
    <define name="TRIM_E" 		value="0"/>
    <define name="TRIM_R" 		value="0"/>
    <define name="NB_MOTOR" 		value="4"/>
    <define name="SCALE" 		value="256"/>
    <define name="STOP_MOTOR"    	value="800"/> <!-- send 0.8ms pulses on kill -->
    
    <!-- Plus configuration, similar to the convention shown in http://paparazzi.enac.fr/wiki/Rotorcraft_Configuration -->
    <!-- Direction of rotation is opposite to that of the convention for engines HB and WL -->
    <!-- Axes are in normal rotorcraft conventions, i.e.: with the props horizontal, 
         you can see the horizon in the PFD. --> 
    <define name="PITCH_COEF"  	value="{   256, -256,    0,    0  }"/>
    <define name="ROLL_COEF"   	value="{     0,    0,  256, -256  }"/>
    <define name="YAW_COEF"    value="{   -0,   0,  -0,   0  }"/>
    <define name="THRUST_COEF" 	value="{   250,  250,  256,  256  }"/>
  </section>

  <!-- include magneto neutrals -->
  <include href="conf/airframes/ATMOS/calib/imu_lisam_033_atmov1.xml"/>

  <section name="IMU" prefix="IMU_">
    <!-- IMU is placed with it's length perpendicular to the wing -->
    <define name="BODY_TO_IMU_PHI"   value="RadOfDeg(   0. )"/>
    <define name="BODY_TO_IMU_THETA" value="RadOfDeg(  84. )"/>
    <define name="BODY_TO_IMU_PSI"   value="RadOfDeg( 180. )"/>
  </section>

 <section name="BAT">
