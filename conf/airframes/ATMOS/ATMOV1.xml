    <target name="ap" board="lisa_m_2.0">
      <subsystem name="radio_control" type="ppm"/>
      <subsystem name="actuators"     type="pwm_supervision">
       <configure name="USE_SERVOS_7AND8"    value="TRUE"/>
      </subsystem>
      <subsystem name="telemetry"     type="xbee_api">
